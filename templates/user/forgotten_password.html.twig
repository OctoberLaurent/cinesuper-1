{% extends 'layout.html.twig' %}

{% block title %}Mot de passe oublié - {{ parent() }}{% endblock %}

{% block content %}
<div class="landing">
    <div class="container bg-light p-3 mt-5">
        <form class="text-center border border-light p-5 mb-5" method="post">
                <p class="h1 mb-4">Réinitialiser votre mot de passe</p>
    
                <!-- E-mail -->
                <label for="defaultRegisterFormEmail">Saisissez votre adresse email pour réinitialiser votre mot de passe</label>
                <input type="email" id="defaultRegisterFormEmail" class="form-control mb-2" placeholder="E-mail" name="email">
            ​
                <!--  button -->
                <button class="btn btn-info my-4 btn-block" type="submit">Réinitialiser votre mot de passe</button>     
        </form>
    </div>

</div>

{% endblock %}
