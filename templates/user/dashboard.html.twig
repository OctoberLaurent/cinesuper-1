{% extends 'layout.html.twig' %}

{% block title %}dashboard - {{ parent() }}{% endblock %}

{% block content %}


<div class="card">
    <div class="card-body text-center mb-2">
        {{app.user.roles[0]}}
    </div>
  </div>
<div class="container">
    <div class="col-10">
        <div class=" d-flex flex-nowrap mt-5">
            <div class="col-xl-3 col-md-6 mb-4 ">
                <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 text-center">nom</div>
                        <div class="h6 mt-5 pt-2 text-center font-weight-bold text-gray-800">{{app.user.lastName }}</div>
                    </div>
                    <div class="col mr-2">
                        <div class="text-xs text-center font-weight-bold text-primary text-uppercase mb-1">Prenom</div>
                        <div class="h6 mt-5 pt-2 text-center font-weight-bold text-gray-800">{{app.user.firstName }}</div>
                    </div>
                    </div>
                </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4 ">
                <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                    <div class="col mr-4">
                        <div class="text-xs text-center font-weight-bold text-primary text-uppercase mb-1">email</div>
                        <div class="h6 mt-5 pt-2 font-weight-bold text-gray-800">{{app.user.email}}</div>
                    </div>
                    </div>
                </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs text-center font-weight-bold text-primary text-uppercase mb-1">carte de fidelité crée le :</div>
                        <div class="h6 mt-4 pt-2 font-weight-bold text-center text-gray-800">{{app.user.createdAt|date('d/m/Y')}}</div>
                    </div>
                    </div>
                </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs text-center font-weight-bold text-primary text-uppercase mb-1">Votre numero d'adherent est le :</div>
                        <div class="h6 mt-2 font-weight-bold text-gray-800">{{app.user.card.number}}</div>
                    </div>
                    </div>
                </div>
                </div>
            </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs text-center font-weight-bold text-primary text-uppercase mb-1">Historique </div>
                    <div class="h6 mt-5 font-weight-bold text-center text-gray-800">{{app.user.card.fidelity}}</div>
                </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>




{% endblock %}